@model Esercizio_28_06.Entities.Product

@{
    ViewData["Title"] = "Dettagli";
}
<link rel="stylesheet" href="~/css/Dettagli.css" />


<h1 class="text-white mt-5">Dettagli</h1>

<div>
    <h2 class="text-white">@Html.DisplayFor(model => model.Name)</h2>
    <hr />
    <div class="row">
        <div class="col-6">
            <div id="carouselExample" class="carousel slide">
                <div class="carousel-inner">

                    <div class="carousel-item active">
                        @if (ViewBag.Cover != null)
                        {
                            <img class="d-block w-100" src="@ViewBag.Cover" alt="First slide" />
                        }
                    </div>
                    <div class="carousel-item">
                        @if (ViewBag.FirstImg != null)
                        {
                            <img class="d-block w-100" src="@ViewBag.FirstImg" alt="First slide" />
                        }
                    </div>
                    <div class="carousel-item">
                        @if (ViewBag.SecondImg != null)
                        {
                            <img class="d-block w-100" src="@ViewBag.SecondImg" alt="First slide" />
                        }
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
        <div class="col-6">

        <dt class = "col-sm-2 text-white">
            @Html.DisplayNameFor(model => model.Id):
        </dt>
        <dd class = "col-sm-10 myColor">
            @Html.DisplayFor(model => model.Id)
        </dd>
            <dt class="col-sm-2 text-white">
            @Html.DisplayNameFor(model => model.Published):
        </dt>
            <dd class="col-sm-10 myColor">
            @Html.DisplayFor(model => model.Published)
        </dd>
            <dt class="col-sm-2 text-white">
            @Html.DisplayNameFor(model => model.Name):
        </dt>
            <dd class="col-sm-10 myColor">
            @Html.DisplayFor(model => model.Name)
        </dd>
            <dt class="col-sm-2 text-white">
            @Html.DisplayNameFor(model => model.Price):
        </dt>
            <dd class="col-sm-10 myColor">
            @Html.DisplayFor(model => model.Price)
        </dd>
            <dt class="col-sm-2 text-white">
            @Html.DisplayNameFor(model => model.Description):
        </dt>
            <dd class="col-sm-10 myColor">
            @Html.DisplayFor(model => model.Description)
        </dd>
    <a asp-action="Index" class="btn myBtnBack">Back to List</a>
        </div>
    </div>
</div>
<div>
</div>


