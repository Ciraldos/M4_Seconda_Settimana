@using Esercizio_28_06.Entities
@{
    ViewData["Title"] = "Lista Prodotti";
}
@model IEnumerable<Product>
<link rel="stylesheet" href="~/css/Index.css" />

<div class="container text-center">
   <h1 class="display-4 my-5 text-white"> Lista Prodotti</h1>
    @if (Model.Any()){
    <div class="row justify-content-center">
        <div class="col-6">
            <div class="row justify-content-center ">
                    @foreach (var product in Model)
                    {
                        <div class="card mb-3 mx-2 shadow myGradient px-5 py-3" id="card">
                            <div class="row g-0 align-items-center">
                                <div class="col-md-5 ">
                                    @if (ViewBag.Cover != null)
                                    {
                                        <img src="@ViewBag.Cover" class="img-fluid rounded-3" alt="Image" />
                                    }
                                </div>
                                <div class="col-md-7 ps-4">
                                    <div class="card-body text-start">
                                        <h5 class="card-title text-white">Nome Prodotto: <span class="myColor">@product.Name<span></h5>
                                        <h5 class="card-text text-white">Prezzo: <span class="myColor">€ @product.Price</span></h5>
                                        <h5 class="card-text text-white">Descrizione: <span class="myColor">@product.Description </span></h5>
                                        <p class="card-text text-white"><small class="text-body-secondary">Pubblicato il: <span class="myColor">@product.Published</span></small></p>
                                        <div class="d-flex">
                                            <a asp-action="Dettagli" asp-route-id="@product.Id" class="btn myBtnCreate me-2">Dettagli</a>
                                            <form asp-action="Delete" method="post">
                                                <input type="hidden" name="id" value="@product.Id" />
                                                <button type="submit" class="btn myBtnBack">Elimina</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

            </div>
        </div>
    </div>
    }
    else{
            <div class="row mt-3"><div class="col text-center alert alert-warning">Non ci sono ancora articoli.</div></div>
    }
</div>
